<div class = "pageview">
  <div class = "pagecontent">

    <div class="title-centered">
      <h1>Edit Series</h1>
    </div>
    <form action="/serieses/<%= @series.id() %>" method="post">
      <label class="fixed-label" for="series_name">Series:</label>
      <input class="text-field" id="series_name" type="text" name="name" value="<%= @series.name() %>"><br><br>
      <div class="show-buttons">
        <input class="btn-main" type='submit' value="Update">
      </div>
    </form>

  </div>
</div>
