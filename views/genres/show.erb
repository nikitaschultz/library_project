<div class = "pageview">
  <div class = "pagecontent">
    <h1><%= @genre.name() %></h1>
    <form action="/genres/<%= @genre.id() %>/edit" method="get">
      <input class="btn-main" type="submit" value="Edit Genre">
    </form>
    <form action="/genres/<%= @genre.id() %>/delete" method="post">
      <input class="btn-nav" type="submit" value="Delete Genre">
    </form>
    <h2>Books:</h2>
    <% for book in @genre.books() %>
    <h3><%= book.title() %>
      <% if(book.series() != nil) %>
      (<%= book.series().name() %> #<%= book.series_number() %>)
      <% end %>
      </h3>
    <p><%= book.author().full_name() %></p>
    <p><%= book.ownership_status().name() %>, <%= book.read_status().name() %></p>
    <hr />
    <% end %>
  </div>
</div>
