<div class = "pageview">
  <div class = "pagecontent">

    <h1><%= @title %></h1>
    <% for book in @books %>
    <h2><%= book.title() %></h2>
    <h3><%= book.author().full_name %></h3>
    <a class="btn-main" href="/books/<%= book.id() %>">View</a>
    <a class="btn-nav" href="/reviews/<%= book.id() %>/new">Review</a>
    <hr />
    <% end %>

  </div>
</div>
