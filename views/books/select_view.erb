<div class = "pageview">
  <div class = "pagecontent">

    <div class="title-centered">
      <h1>Library</h1>
      <div class="show-buttons">
        <a class="btn-highlight" href="/books/view/<%= OwnershipStatus.find_by_name("Bookshelf").id() %>">View All</a>
      </div>
    </div>

    <h2>View books by:</h2>

    <form class="view-box" action="/books/author" method="get">
      <label class="fixed-label" for="author">Author:</label><br>
      <select class="dropdown" id="author" name="author_id">
        <% for author in @authors %>
        <option id="author" value="<%= author.id() %>"><%= author.full_name() %></option>
        <% end %>
      </select>
      <input class="btn-main" type="submit" value="View">
    </form>

    <form class="view-box" action="/books/genre" method="get">
      <label class="fixed-label" for="genre">Genre:</label><br>
      <select class="dropdown" id="genre" name="genre_id">
        <% for genre in @genres %>
        <option id="genre" value="<%= genre.id() %>"><%= genre.name() %></option>
        <% end %>
      </select>
      <input class="btn-main" type="submit" value="View">
    </form>

    <form class="view-box" action="/books/series" method="get">
      <label class="fixed-label" for="series">Series:</label><br>
      <select class="dropdown" id="series" name="series_id">
        <% for series in @serieses %>
        <option id="series" value="<%= series.id() %>"><%= series.name() %></option>
        <% end %>
      </select>
      <input class="btn-main" type="submit" value="View">
    </form>

    <form class="view-box" action="/books/read_status" method="get">
      <label class="fixed-label" for="read_status">Read Status:</label><br>
      <select class="dropdown" id="read_status" name="read_status_id">
        <% for read_status in @read_statuses %>
        <option id="read_status" value="<%= read_status.id() %>"><%= read_status.name() %></option>
        <% end %>
      </select>
      <input class="btn-main" type="submit" value="View">
    </form>

    <form class="view-box" action="/books/format" method="get">
      <label class="fixed-label" for="format">Format:</label><br>
      <select class="dropdown" id="format" name="format_id">
        <% for format in @formats %>
        <option id="format" value="<%= format.id() %>"><%= format.name() %></option>
        <% end %>
      </select>
      <input class="btn-main" type="submit" value="View">
    </form>

    <form class="view-box" action="/books/tag" method="get">
      <label class="fixed-label" for="tag">Tag:</label><br>
      <select class="dropdown" id="tag" name="tag_id">
        <% for tag in @tags %>
        <option id="tag" value="<%= tag.id() %>"><%= tag.name() %></option>
        <% end %>
      </select>
      <input class="btn-main" type="submit" value="View">
    </form><br>

    <h2>View by review:</h2>

    <form class="view-box" action="/books/rating" method="get">
      <label class="fixed-label" for="rating">Rating:</label><br>
      <select class="dropdown" id="rating" name="rating_number">
        <% for rating in @ratings %>
        <option id="rating" value="<%= rating %>"><%= rating %>+ Stars</option>
        <% end %>
      </select>
      <input class="btn-main" type="submit" value="View">
    </form>

  </div>
</div>

